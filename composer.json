{
    "name": "surgiie/transformer",
    "description": "A data transforming/formatting package for php.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "formatting",
        "input formatting",
        "sanitize",
        "sanitize input"
    ],
    "authors": [
        {
            "name": "Sergio Compean",
            "email": "scompean24@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/validation": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "laravel/pint": "^1.16",
        "phpstan/phpstan": "^2.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Surgiie\\Transformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Surgiie\\Transformer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest tests -c phpunit.dist.xml",
        "test:coverage": "./vendor/bin/pest tests -c phpunit.dist.xml --coverage",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "format": "./vendor/bin/pint",
        "format:test": "./vendor/bin/pint --test",
        "quality": [
            "@format:test",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Surgiie\\Transformer\\TransformerServiceProvider"
            ]
        }
    }
}
