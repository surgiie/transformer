{
    "name": "surgiie/transformer",
    "description": "A data transforming/formatting package for php.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "formatting",
        "input formatting",
        "sanitize",
        "sanitize input"
    ],
    "authors": [
        {
            "name": "Sergio Compean",
            "email": "scompean24@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/http": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/validation": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "laravel/pint": "^1.16",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Surgiie\\Transformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Surgiie\\Transformer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest tests -c phpunit.dist.xml"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Surgiie\\Transformer\\TransformerServiceProvider"
            ]
        }
    }
}
